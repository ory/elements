{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "emitDeclarationOnly": false,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist",
    "rootDir": "./src",
    "noEmit": false
  },
  "include": ["./src"],
  "exclude": [
    "**/*.spec.*",
    "**/*.test.*",
    "**/*.stories.*",
    "node_modules",
    "dist"
  ]
}
